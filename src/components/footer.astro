---
import { Icon } from 'astro-icon/components';
import Container from '@/components/container.astro';

const links = [
    { name: 'About', href: '/about' },
    { name: 'Testimonials', href: '/testimonials' },
    { name: 'Features', href: '/features' },
    { name: 'Episodes', href: '/episodes' },
    { name: 'Pricing', href: '/pricing' },
    { name: 'Blog', href: '/blog' },
];

const platforms = [
    { name: 'google-podcasts', href: '#' },
    { name: 'spotify', href: '#' },
    { name: 'youtube', href: '#' },
];

const socials = [
    { name: 'twitter', href: '#' },
    { name: 'instagram', href: '#' },
    { name: 'tiktok', href: '#' },
];

const appStores = [
    { name: 'app-store', href: '#' },
    { name: 'google-play', href: '#' },
];
---

<footer>
    <!-- pt-35 (140px), pb-19 (76px) -->
    <Container class="py-20 grid gap-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 justify-between gap-12 lg:gap-0">
            <div class="grid gap-8">
                <div class="flex gap-2 items-end">
                    <a href="/">
                        <Icon name="logo" size={70} />
                    </a>
                    <p class="text-xs">&copy; {new Date().getFullYear()}</p>
                </div>
                <p class="max-w-[25ch] text-sm">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                <div class="flex gap-2">
                    {
                        socials.map((social) => (
                            <a href={social.href} class="transition-all duration-200 hover:text-primary">
                                <Icon name={social.name} size={30} />
                            </a>
                        ))
                    }
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 place-content-start">
                {links.map((link) => <a class="link link-hover hover:text-primary dur" href={link.href}>{link.name}</a>)}
            </div>
            <div class="grid content-between lg:justify-end">
                <div class="grid gap-6">
                    <p>Listen to episodes on your favorite platform:</p>
                    <div class="flex items-center">
                        {
                            platforms.map((platform) => (
                                <a href={platform.href}>
                                    <Icon name={platform.name} width={120} height={22}/>
                                </a>
                            ))
                        }
                    </div>
                </div>

                <div class="grid gap-6">
                    <p>App available on:</p>
                    <div class="flex">
                        {
                            appStores.map((store) => (
                                <a href={store.href}>
                                    <Icon name={store.name} size={36} />
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="flex justify-between text-xs py-6 border-t-neutral/20 border-t-2">
            <p>&copy;{new Date().getFullYear()}. All Rights Reserved. <a href="/" class="link link-hover link-primary">Pod Of Cast</a></p>
            <div>
                <a class="link link-hover link-secondary" href="/terms-of-service">Terms</a>
                <span class="text-base">.</span>
                <a class="link link-hover link-secondary" href="/privary-policy">Policy</a>
            </div>
        </div>
    </Container>
</footer>
